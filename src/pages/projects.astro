---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allProjects = (await getCollection('projects')).sort(
  (a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime()
);
---

<BaseLayout
  title="Projects — Robotics & Software Engineering"
  description="A repository of robotics and software engineering projects showcasing technical work."
>
  <div class="container mx-auto px-6">
    <header class="mb-section">
      <h1 class="text-hero font-bold mb-6 tracking-tight">Projects</h1>
      <p class="text-lg text-gray-700 max-w-2xl animate-fade-in-up" style="animation-delay: 0.1s;">
        A collection of robotics and software engineering projects. 
        Each project represents work at the intersection of hardware and software.
      </p>
    </header>

    {allProjects.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {allProjects.map((project, index) => (
          <article class="border border-gray-200 rounded-lg p-6 hover:border-gray-300 transition-colors animate-fade-in-up" style={`animation-delay: ${0.2 + index * 0.1}s;`}>
            {project.data.image && (
              <div class="mb-4 aspect-video bg-gray-100 rounded overflow-hidden">
                <img
                  src={project.data.image}
                  alt={project.data.title}
                  class="w-full h-full object-cover"
                />
              </div>
            )}
            
            <h2 class="text-xl font-semibold mb-2">
              <a
                href={`/projects/${project.slug}`}
                class="hover:text-gray-600 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2 rounded"
              >
                {project.data.title}
              </a>
            </h2>
            
            <p class="text-gray-600 mb-4 text-sm leading-relaxed">
              {project.data.description}
            </p>
            
            <div class="flex flex-wrap gap-2 mb-4">
              {project.data.techStack.map((tech) => (
                <span class="px-2 py-1 bg-gray-100 rounded text-xs font-mono text-gray-700 transition-all duration-200 ease-out hover:bg-gray-900 hover:text-white hover:scale-105 hover:shadow-md cursor-default transform-gpu">
                  {tech}
                </span>
              ))}
            </div>
            
            <div class="flex items-center justify-between text-sm">
              <time
                datetime={project.data.publishDate.toISOString()}
                class="text-gray-500 font-mono"
              >
                {project.data.publishDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                })}
              </time>
              <div class="flex items-center gap-3">
                {project.data.demoUrl && (
                  <a
                    href={project.data.demoUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray-700 hover:text-gray-900 font-mono focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2 rounded"
                    aria-label={`View ${project.data.title} demo`}
                  >
                    Demo →
                  </a>
                )}
                <a
                  href={project.data.githubUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-700 hover:text-gray-900 font-mono focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2 rounded"
                  aria-label={`View ${project.data.title} on GitHub`}
                >
                  GitHub →
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <p class="text-gray-600">
        No projects yet. Check back soon for project showcases.
      </p>
    )}
  </div>
</BaseLayout>

