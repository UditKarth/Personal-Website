---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allProjects = (await getCollection('projects')).sort(
  (a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime()
);
---

<BaseLayout
  title="Projects — Robotics & Software Engineering"
  description="A repository of robotics and software engineering projects showcasing technical work."
>
  <div class="container mx-auto px-6">
    <header class="mb-section">
      <h1 class="text-hero font-bold mb-6 tracking-tight">Projects</h1>
      <p class="text-lg text-gray-700 dark:text-gray-300 max-w-2xl">
        A collection of robotics and software engineering projects. 
        Each project represents work at the intersection of hardware and software.
      </p>
    </header>

    {allProjects.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {allProjects.map((project) => (
          <article class="border border-gray-200 dark:border-gray-800 rounded-lg p-6 hover:border-gray-300 dark:hover:border-gray-700 transition-colors">
            {project.data.image && (
              <div class="mb-4 aspect-video bg-gray-100 dark:bg-gray-800 rounded overflow-hidden">
                <img
                  src={project.data.image}
                  alt={project.data.title}
                  class="w-full h-full object-cover"
                />
              </div>
            )}
            
            <h2 class="text-xl font-semibold mb-2">
              <a
                href={`/projects/${project.slug}`}
                class="hover:text-gray-600 dark:hover:text-gray-400 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-900 dark:focus:ring-gray-100 focus:ring-offset-2 dark:focus:ring-offset-gray-900 rounded"
              >
                {project.data.title}
              </a>
            </h2>
            
            <p class="text-gray-600 dark:text-gray-400 mb-4 text-sm leading-relaxed">
              {project.data.description}
            </p>
            
            <div class="flex flex-wrap gap-2 mb-4">
              {project.data.techStack.map((tech) => (
                <span class="px-2 py-1 bg-gray-100 dark:bg-gray-800 rounded text-xs font-mono text-gray-700 dark:text-gray-300">
                  {tech}
                </span>
              ))}
            </div>
            
            <div class="flex items-center justify-between text-sm">
              <time
                datetime={project.data.publishDate.toISOString()}
                class="text-gray-500 dark:text-gray-500 font-mono"
              >
                {project.data.publishDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                })}
              </time>
              <a
                href={project.data.githubUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 font-mono focus:outline-none focus:ring-2 focus:ring-gray-900 dark:focus:ring-gray-100 focus:ring-offset-2 dark:focus:ring-offset-gray-900 rounded"
                aria-label={`View ${project.data.title} on GitHub`}
              >
                GitHub →
              </a>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <p class="text-gray-600 dark:text-gray-400">
        No projects yet. Check back soon for project showcases.
      </p>
    )}
  </div>
</BaseLayout>

