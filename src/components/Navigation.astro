---
const currentPath = Astro.url.pathname;
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/writings', label: 'Writings' },
  { href: '/projects', label: 'Projects' },
];
---

<nav class="mb-section" aria-label="Main navigation">
  <ul class="flex flex-wrap gap-6 text-sm font-mono">
    {navItems.map((item) => (
      <li>
        <a
          href={item.href}
          class={`transition-colors hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2 rounded ${
            currentPath === item.href
              ? 'text-gray-900 font-semibold'
              : 'text-gray-600'
          }`}
        >
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</nav>

